				  <ul class="right">
		            <li class="divider"></li>
		            <% if user_signed_in? %>
		              <li><a href="#"></a>
		              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
		            <% else %>
		              <li><a href="#"></a>
		              <%= link_to('Login', new_user_session_path)  %></li>
		              <li class="divider"></li>
		              <li><a href="#"></a>
