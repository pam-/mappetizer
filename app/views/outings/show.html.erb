<div class="info row" data-id="<%= @outing.id %>" data-city="<%= @outing.city %>">
	<div class="small-4 columns">
		<div class='row'>
			<h2> <%= @outing.name  %> 
				<small> <%= @outing.date  %>
				</small> 
				<span> 
				<%= @outing.city  %> 
				</span>
			</h2>
		</div>
	
	<% @activities.each do |activity| %>
		<div class='row'>	
			<h3><%= activity.name %><h3>
			<p><%= activity.category %><p>
			<%= link_to 'RSVP', activity.event_url %>
		</div>
	<% end %> 
	</div>

	<div class="small-8 columns" id="map"></div>
</div>